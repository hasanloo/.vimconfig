[user]
	email = hasan@sam-media.com
	name = Hasan Gharehhasan Loo

[alias]
	co = checkout
	com = checkout master
	cm = commit
	cmm = commit -m
	st = status
	br = branch
	bra = branch -a
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	pushme = push -u origin HEAD
	rpull = pull --rebase --prune --verbose --no-ff --no-commit --no-stat
[core]
	excludesfile = /home/hasan/.gitignore_global
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
